{
  // Path of shell, $SHELL or %COMSPEC% by default
  "terminal.shell.path": null,

  // Extra environment variables
  "terminal.shell.env": {},

  // Arguments of shell command line
  "terminal.shell.args": ["--login"],

  // Absolute path (or with args as array) of external file manager
  // (or code editor, etc) for launchers
  // Open in system file manager by default
  "terminal.external.explorer": "",

  // Title format of terminal window in grammer of ECMAScript template literals
  // Supported variables: title (OSC, probably undefined), name (for launchers), process, id
  "terminal.window.titleFormat": "${ title || process }",

  // Title format of terminal tab (similar to terminal.window.titleFormat)
  "terminal.tab.titleFormat": "${ process }",

  // Subtitle format of terminal tab (similar to terminal.window.titleFormat)
  "terminal.tab.subtitleFormat": "${ name || title || id }",

  // Font size for window in pixels
  "terminal.style.fontSize": 14,

  // Font family names for window
  "terminal.style.fontFamily": "Fira Code, Consolas, Monaco, Andale Mono, Ubuntu Mono, monospace",

  // Enable font ligatures (if specified font family supports, like Fira Code or Iosevka)
  "terminal.style.fontLigatures": false,

  // File name of internal theme or files in `themes/` folder
  // Support `oceanic-next` or `tomorrow` by default
  "terminal.theme.name": "oceanic-next",

  // Overwrite colors in the theme file
  "terminal.theme.customization": {},
}
